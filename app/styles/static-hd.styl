*, *:before, *:after 
	margin 0
	padding 0
	box-sizing border-box
	text-decoration none
	outline none
	list-style none
	
body
	width 100%
	max-width 1400px
	margin 0 auto
	padding 0
	background-color #ffffff
	color grayText
	font(OpenSans, 12px, 20px, 200)
	
.main-header
	width 100%
	background-color bluegray
	background-image url('../images/header-bg.jpg')
	background-repeat no-repeat
	background-size auto 100%
	background-position center
	color #ffffff
	
	+retina()
		background-image url('../images/header-bg@2.jpg')
	
	&__bunner
		size(100%, 621px)
		padding 192px 115px 150px
		text-align center
		
	&__title
		margin 0
		padding-bottom 30px
		font(Lora, 58px, 58px, 600)
		
	&__description
		margin-bottom 85px
		font(OpenSans, 25px, 25px, 400)
		
	&__btn-started
		btn()
	
.top-header
	position relative
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	size(100%, 90px)
	padding 0 115px
	
	&__logo
		size(130px, 38px)
		text-decoration none
		color #ffffff
		
		img
			size(100%)
			
	&__btn-menu
		display none
		background-color transparent
		border none
			
	&__btn-icon
		size(100%)
		fill #ffffff
		
.main-nav
	&__item
		display inline-block
		margin 5px
		padding 15px 25px
		color #ffffff
		text-decoration none
		font(OpenSans, 14px, 14px, 600)
		border-radius 25px
		
		&:hover
			background-color rgba(#ffffff, 0.3)
			
		&:active
			background-color rgba(#ffffff, 0.3)
			color accent
			
.main-content
	width 100%
	
.services
	padding 70px 115px
	text-align center
	
	&__title
		position relative
		margin-bottom 95px
		text-transform uppercase
		font(Lora, 43px, 43px, 600)
		color textColor
		
		&:after
			markertitle()
			
	&__list
		display flex
		flex-wrap nowrap
		justify-content space-between
		
.service
	size(283px, auto)
	padding 20px 15px
	text-align center
	color grayText
	border 1px solid transparent
	border-radius 15%
	
	&:hover
		border-color accent
		
		.service__name
			color accent
	
	&__icon
		display block
		size(80px)
		margin 0 auto 19px
		background-color #f5f6f8
		border-radius 50%
		
	&__svg
		size(100%)
		padding 23px
		fill accent
		
	&__name
		position relative
		margin-bottom 18px
		font(OpenSans, 18px, 18px, 600)
		text-transform uppercase
		color textColor
		
		&:after
			markertitle(19px, 40px, 1px)
			background-color bluegray
		
.portfolio
	margin-top 28px
	padding 46px 115px 65px
	background-color #f5f6f8
	text-align center
	
	&__title
		position relative
		margin-bottom 50px
		text-transform uppercase
		font(Lora, 43px, 43px, 600)
		color textColor
		
		&:after
			markertitle()
			
	&__photos-block
		width 100%
		display flex
		flex-direction row
		justify-content space-between
		flex-wrap wrap
		
	&__photo-link
		margin-bottom 15px
		box-shadow 0 2px 2px 0 rgba(#000, 15%)
		
	&__photo-img
		size(380px, 280px)
			
	&__photo-name
		size(380px, auto)
		padding 30px 34px
		text-align left
		color textColor
		font(OpenSans, 18px, 18px, 600)
			
	&__show-more
		btn(22px, 64px, 25px, 32px)
		margin-top 45px
		
		&:active
			color accent
		
.work-types
	display flex
	justify-content center
	align-items center
	margin-bottom 40px
		
	&__item
		padding 12px 25px
		font(OpenSans, 14px, 14px, 400)
		text-transform uppercase
		text-align center
		color textColor
		
.ui-state-active .work-types__item
	position relative
	margin 0
	color accent
	text-align center
	
	&:before
		content ''
		position absolute
		bottom 0
		left 50%
		size(24px, 2px)
		margin-left -12px
		background-color accent
		
		
.brands
	width 100%
	padding 70px 115px 120px
	text-align center
	
	&__title
		position relative
		margin-bottom 50px
		text-transform uppercase
		font(Lora, 43px, 43px, 600)
		color textColor
		
		&:after
			markertitle()
			
	&__list
		display flex
		justify-content space-between
		flex-wrap nowrap
		
	&__logo
		size(auto)
		flex-shrink 0
		align-self center

.reviews
	position relative
	width 100%
	padding 65px 145px 70px
	background-color #f5f6f8
	text-align center
	
	&__title
		position relative
		margin-bottom 60px
		text-transform uppercase
		font(Lora, 43px, 43px, 600)
		color textColor
		
		&:after
			markertitle()
			
	&__prev-review
		position absolute
		top 343px
		left 145px
		display block
		size(33px)
		background-color transparent
		border none
		
	&__prev-icon
		size(100%)
		fill #999999
		
	&__next-review
		position absolute
		top 343px
		right 145px
		display block
		size(33px)
		background-color transparent
		border none
		
	&__next-icon
		size(100%)
		fill #999999

.review
	position relative
	display none
	width 580px
	margin 0 auto
	
	&:nth-of-type(2)
		display block
		
	&__photo
		size(135px)
		margin-bottom 40px
		border-radius 50%
		
	&__description
		margin-bottom 35px
		font(Lora, 24px, 30px, 400)
		color textColor
		
	&__user
		font(Lora, 18px, 30px, 400)
		color textColor
		
	&__source
		font(Lora, 18px, 30px, 400)
		color textColor
		text-decoration underline

.main-footer
	&__top-footer
		display flex
		flex-wrap wrap
		justify-content space-between
		width 100%
		padding 70px
		background-color bluegrayColor
		
	&__bottom-footer
		position relative
		display flex
		flex-wrap nowrap
		justify-content space-between
		width 100%
		padding 28px 115px
		background-color #ffffff
		
	&__copyright
		font(OpenSans, 13px, 32px, 300)
		
	&__up-btn
		position absolute
		top -33px
		left 50%
		size(66px)
		margin-left -33px
		padding 24px
		background-color accent
		border 2px solid transparent
		border-radius 50%
		box-shadow 0 2px 2px 0 rgba(#000, 0.3)

		&:hover
			background-color lighten(accent, 20%)

		&:active
			background-color transparent
			border-color accent
		
	&__up-icon
		size(100%)
		fill #ffffff
		
.footer-nav
	width 100%
	text-align right
	
	&__link
		padding 17px 15px
		font(OpenSans, 21px, 30px, 300)
		color #ffffff
		border-radius 20px
		
		&:hover
			background-color rgba(#ffffff, 0.3)
			
		&:active
			background-color rgba(#ffffff, 0.3)
			color accent

.contacts
	display inline-block
	position relative
	width 380px
	padding-top 53px
	padding-left 45px
	
	&__title
		position absolute
		top -35px
		left 45px
		font(Lora, 33px, 40px, 600)
		color #ffffff
		
	&__subtitle
		padding-top 62px
		padding-bottom 25px
		font(OpenSans, 24px, 30px, 600)
		color #ffffff
		text-transform uppercase
		
	&__date
		font(OpenSans, 18px, 24px, 300)
		color grayText
		
.feedback-form
	padding-top 100px
	
	&__label-name
		label()
		display inline-block
		width 360px
		margin-right 50px
		margin-bottom 55px
		
	&__input-name
		input()
		display block
		width 100%
		
	&__label-subject
		display inline-block
		label()
		width 360px
		margin-bottom 55px
		
	&__input-subject
		input()
		display block
		width 100%
		
	&__label-message
		label()
		display block
		width 100%
		margin-bottom 60px
		
	&__input-message
		input()
		display block
		size(100%, 140px)
		
	&__btn
		btn(21px, 56px, 25px, 32px)
		border-radius 32px
		
.social
	display flex
	flex-wrap nowrap
	
	&__link
		display flex
		flex-wrap nowrap
		justify-content center
		align-items center
		size(32px)
		margin 0 5px
		background-color grayText
		border 1px solid transparent
		border-radius 50%
		
		&:hover
			background-color transparent
			border-color accent
			
			.social__icon
				fill accent
		
	&__icon
		size(55%)
		fill #fff
		
.modal-form
	display none
	
	&__window
		position fixed
		top 50vh
		left 50vw
		display block
		size(500px, 300px)
		padding 110px 0
		margin-left -250px
		margin-top -150px
		background-color #fff
		color textColor
		text-align center
		font(Roboto, 20px, 30px, 300)
		z-index 100
	
	&__overlay
		position fixed
		top 0
		left 0
		display block
		size(100%)
		background-color rgba(#000, 70%)
	
.modal-link
	display none
	
	&__window
		position fixed
		top 50vh
		left 50vw
		display block
		size(500px, 300px)
		padding 110px 0
		margin-left -250px
		margin-top -150px
		background-color #fff
		color textColor
		text-align center
		font(Roboto, 20px, 30px, 300)
		z-index 100
	
	&__overlay
		position fixed
		top 0
		left 0
		display block
		size(100%)
		background-color rgba(#000, 70%)