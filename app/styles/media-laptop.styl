+between(900px, 1399px)
	.main-header
		&__bunner
			size(100%, 44.36vw)
			padding 13.71vw 8.21vw 10.71vw

		&__title
			padding-bottom 2.14vw
			font(Lora, 4.14vw, 4.14vw, 600)

		&__description
			margin-bottom 6.07vw
			font(OpenSans, 1.79vw, 1.79vw, 400)

		&__btn-started
			padding 1.86vw 5.07vw
			font(OpenSans, 1.79vw, 1.79vw, 400)
			border-radius 2.57vw
			
	.top-header
		size(100%, 6.43vw)
		padding 0 8.21vw

		&__logo
			size(9.29vw, 2.71vw)

	.main-nav
		&__item
			margin 0.36vw
			padding 1.07vw 1.79vw
			font(OpenSans, 1vw, 1vw, 600)
			border-radius 1.79vw
			
	.services
		padding 5vw 8.21vw

		&__title
			margin-bottom 6.79vw
			padding-bottom 2.43vw
			font(Lora, 3.07vw, 3.07vw, 600)
			
			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)

	.service
		size(20.21vw, auto)
		padding 1.43vw 1.07vw

		&__icon
			size(5.71vw)
			margin 0 auto 1.36vw

		&__svg
			size(100%)
			padding 1.64vw

		&__name
			margin-bottom 1.29vw
			font(OpenSans, 1.29vw, 1.29vw, 600)

			&:after
				markertitle(1.36vw, 2.86vw, 1px)
				
	.portfolio
		margin-top 2vw
		padding 3.29vw 8.21vw 4.64vw

		&__title
			margin-bottom 3.57vw
			font(Lora, 3.07vw, 3.07vw, 600)

			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)

		&__photo-link
			margin-bottom 1.07vw

		&__photo-img
			size(27.14vw, 20vw)

		&__photo-name
			size(27.14vw, auto)
			padding 2.14vw 2.43vw
			font(OpenSans, 1.29vw, 1.29vw, 600)

		&__show-more
			btn(1.57vw, 4.57vw, 1.79vw, 2.29vw)
			margin-top 3.2vw

	.work-types
		margin-bottom 2.86vw

		&__item
			padding 0.86vw 1.79vw
			font(OpenSans, 1.29vw, 1.29vw, 400)
			
	.ui-state-active .work-types__item
		&:before
			content ''
			position absolute
			bottom 0
			left 50%
			size(2.2vw, 2px)
			margin-left -1.1vw
			background-color accent
			
	.brands
		padding 5vw 8.21vw 8.57vw

		&__title
			margin-bottom 3.57vw
			font(Lora, 3.07vw, 3.07vw, 600)

			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)

		&__logo
			size(11%, auto)
			align-self center
			margin 0 2vw
			
	.reviews
		padding 4.64vw 10.36vw 5vw

		&__title
			margin-bottom 4.29vw
			font(Lora, 3.07vw, 3.07vw, 600)

			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)

		&__prev-review
			top 24.5vw
			left 10.36vw
			size(2.35vw)

		&__next-review
			top 24.5vw
			right 10.36vw
			size(2.35vw)

	.review
		width 41.5vw

		&__photo
			margin-bottom 2.86vw

		&__description
			margin-bottom 2.5vw
			font(Lora, 1.71vw, 2.14vw, 400)

		&__user
			font(Lora, 1.29vw, 2.14vw, 400)

		&__source
			font(Lora, 1.29vw, 2.14vw, 400)

	.main-footer
		&__top-footer
			padding 5vw
			
		&__bottom-footer
			padding 2vw 8.21vw

		&__copyright
			font(OpenSans, 0.93vw, 2.29vw, 300)

		&__up-btn
			top -2.35vw
			size(4.7vw)
			margin-left -2.35vw
			padding 1.6vw

	.footer-nav
		&__link
			padding 1.21vw 1.02vw
			font(OpenSans, 1.5vw, 2.14vw, 300)
			border-radius 1.4vw

	.contacts
		width 27.14vw
		padding-top 3.79vw
		padding-left 3.21vw

		&__title
			top -2.5vw
			left 3.21vw
			font(Lora, 2.36vw, 2.86vw, 600)

		&__subtitle
			padding-top 4.43vw
			padding-bottom 1.79vw
			font(OpenSans, 1.71vw, 2.14vw, 600)

		&__date
			font(OpenSans, 1.29vw, 1.71vw, 300)

	.feedback-form
		padding-top 7.14vw

		&__label-name
			width 25.71vw
			margin-right 3.57vw
			margin-bottom 3.93vw
			font(OpenSans, 1.79vw, 2.71vw, 300)

		&__input-name
			padding 0.71vw 1.57vw
			font(OpenSans, 1.43vw, 2.14vw, 300)
			placeholder(font-size, 1.43vw)
			placeholder(line-height, 2.14vw)

		&__label-subject
			width 25.71vw
			margin-bottom 3.93vw
			font(OpenSans, 1.79vw, 2.71vw, 300)

		&__input-subject
			padding 0.71vw 1.57vw
			font(OpenSans, 1.43vw, 2.14vw, 300)
			placeholder(font-size, 1.43vw)
			placeholder(line-height, 2.14vw)

		&__label-message
			margin-bottom 4.29vw
			font(OpenSans, 1.79vw, 2.71vw, 300)

		&__input-message
			size(100%, 10vw)
			font(OpenSans, 1.43vw, 2.14vw, 300)
			placeholder(font-size, 1.43vw)
			placeholder(line-height, 2.14vw)

		&__btn
			btn(1.5vw, 4vw, 1.79vw, 2.29vw)
			border-radius 2.29vw
			
	.social
		&__link
			size(2.29vw)
			margin 0 0.36vw