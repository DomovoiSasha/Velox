+between(0px, 319px)
	body
		min-width 320px
	
	.main-header
		&__bunner
			size(100%, auto)
			padding 41.6px 16px

		&__title
			padding-bottom 12.8px
			font(Lora, 22.4px, 22.4px, 600)

		&__description
			margin-bottom 22.4px
			font(OpenSans, 9.6px, 9.6px, 400)

		&__btn-started
			padding 6px 16.2px
			font(OpenSans, 9.6px, 9.6px, 400)
			border-radius 9.6px
			
	.top-header
		size(100%, 41.6px)
		padding 0 32px
		background-color rgba(#9b9ea5, 1)

		&__logo
			size(57.6px, 16.8px) //3.428
			
		&__btn-menu
			display block
			size(19.2px)

	.main-nav
		position absolute
		top 41.6px
		left 0
		display none
		size(100%, auto)
		background-color rgba(#9b9ea5, 1)
		text-align center
		
		&__item
			display block
			margin 0vw
			padding 9.6px
			font(OpenSans, 11.2px, 11.2px, 600)
			border-bottom 1px solid rgba(#fff, 0.5)
			border-radius 0vw