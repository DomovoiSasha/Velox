+between(600px, 899px)
	body
		font(OpenSans, 1.5vw, 2.5vw, 200)
		
	.main-header
		&__bunner
			size(100%, auto)
			padding 13.71vw 8.21vw 10.71vw

		&__title
			padding-bottom 2.14vw
			font(Lora, 5.2vw, 5.2vw, 600)

		&__description
			margin-bottom 6.07vw
			font(OpenSans, 2vw, 2vw, 400)

		&__btn-started
			padding 1.86vw 5.07vw
			font(OpenSans, 2vw, 2vw, 400)
			border-radius 2.57vw
			
	.top-header
		size(100%, 8vw)
		padding 0 8.21vw

		&__logo
			size(11vw, 3.21vw) //3.428

	.main-nav
		&__item
			margin 0.36vw
			padding 1.07vw 1.79vw
			font(OpenSans, 1.5vw, 1.5vw, 600)
			border-radius 1.79vw
			
	.services
		padding 8vw 10vw

		&__title
			margin-bottom 6.79vw
			padding-bottom 2.43vw
			font(Lora, 3.07vw, 3.07vw, 600)
			
		&__list
			flex-wrap wrap
			justify-content space-around

	.service
		size(34vw, auto)
		padding 3vw 2vw
		
		&:nth-of-type(1),
		&:nth-of-type(2)
			margin-bottom 10vw

		&__icon
			size(7vw)
			margin 0 auto 3vw

		&__svg
			padding 2vw

		&__name
			margin-bottom 1.7vw
			font(OpenSans, 1.7vw, 1.7vw, 600)

			&:after
				markertitle(1.5vw, 3.5vw, 1px)