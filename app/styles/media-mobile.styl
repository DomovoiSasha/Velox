+between(320px, 599px)
	body
		font(OpenSans, 2vw, 3.3vw, 200)
		
	.main-header
		&__bunner
			size(100%, auto)
			padding 13vw 5vw 13vw

		&__title
			padding-bottom 4vw
			font(Lora, 7vw, 7vw, 600)

		&__description
			margin-bottom 7vw
			font(OpenSans, 3vw, 3vw, 400)

		&__btn-started
			padding 1.86vw 5.07vw
			font(OpenSans, 3vw, 3vw, 400)
			border-radius 3vw
			
	.top-header
		size(100%, 13vw)
		padding 0 10vw
		background-color rgba(#9b9ea5, 1)

		&__logo
			size(18vw, 5.25vw) //3.428
			
		&__btn-menu
			display block
			size(6vw)

	.main-nav
		position absolute
		top 13vw
		left 0
		display none
		size(100%, auto)
		background-color rgba(#9b9ea5, 1)
		text-align center
		
		&__item
			display block
			margin 0vw
			padding 3vw
			font(OpenSans, 3.5vw, 3.5vw, 600)
			border-bottom 1px solid rgba(#fff, 0.5)
			border-radius 1vw
			
	.services
		padding 8vw

		&__title
			margin-bottom 6.79vw
			font(Lora, 3.07vw, 3.07vw, 600)
			
			&:after
				markertitle(4vw, 10vw, 0.3vw)
			
		&__list
			flex-wrap wrap
			justify-content space-around

	.service
		size(38vw, auto)
		padding 3vw 2vw
		
		&:nth-of-type(1),
		&:nth-of-type(2)
			margin-bottom 10vw

		&__icon
			size(9vw)
			margin 0 auto 3.5vw

		&__svg
			padding 2.5vw

		&__name
			margin-bottom 2.5vw
			font(OpenSans, 2vw, 2vw, 600)

			&:after
				markertitle(1.5vw, 3.5vw, 1px)
				
	.portfolio
		margin-top 2vw
		padding 4.5vw 8.21vw 4.64vw

		&__title
			margin-bottom 5vw
			font(Lora, 3.07vw, 3.07vw, 600)

			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)

		&__photo-link
			margin-bottom 3vw

		&__photo-img
			size(40vw, 29.48vw)

		&__photo-name
			size(27.14vw, auto)
			padding 2.5vw
			font(OpenSans, 2vw, 2vw, 600)

		&__show-more
			btn(1.57vw, 4.57vw, 1.79vw, 2.29vw)
			margin-top 3.2vw

	.work-types
		margin-bottom 4vw

		&__item
			padding 0.86vw 1.79vw
			font(OpenSans, 2vw, 2vw, 400)
			
	.ui-state-active .work-types__item
		&:before
			content ''
			position absolute
			bottom 0
			left 50%
			size(3.4vw, 2px)
			margin-left -1.7vw
			background-color accent
			
	.brands
		padding 5vw 8.21vw 8.57vw

		&__title
			margin-bottom 3.57vw
			font(Lora, 3.07vw, 3.07vw, 600)

			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)
			
		&__list
			flex-wrap wrap
			justify-content center

		&__logo
			size(20%, auto)
			align-self center
			margin 3vw 4vw
			
	.reviews
		padding 4.64vw 10.36vw 5vw

		&__title
			margin-bottom 4.29vw
			font(Lora, 3.07vw, 3.07vw, 600)

			&:after
				markertitle(2.14vw, 10.71vw, 0.29vw)

		&__prev-review
			top 25.5vw
			left 10.36vw
			size(4vw)

		&__next-review
			top 25.5vw
			right 10.36vw
			size(4vw)

	.review
		width 55vw

		&__photo
			size(11vw)
			margin-bottom 2.86vw

		&__description
			margin-bottom 2.5vw
			font(Lora, 2vw, 2.7vw, 400)

		&__user
			font(Lora, 1.7vw, 2.14vw, 400)

		&__source
			font(Lora, 1.7vw, 2.14vw, 400)

	.main-footer
		&__top-footer
			padding 5vw
			
		&__bottom-footer
			padding 4vw 8vw

		&__copyright
			font(OpenSans, 1.5vw, 5vw, 300)

		&__up-btn
			top -3.5vw
			size(7vw)
			margin-left -3.5vw
			padding 1.8vw

	.footer-nav
		&__link
			padding 1.21vw 1.1vw
			font(OpenSans, 2.1vw, 2.2vw, 300)
			border-radius 1.4vw

	.contacts
		width 27.14vw
		padding-top 3.79vw
		padding-left 3.21vw

		&__title
			top -2.5vw
			left 3.21vw
			font(Lora, 2.6vw, 3vw, 600)

		&__subtitle
			padding-top 4.43vw
			padding-bottom 1.79vw
			font(OpenSans, 1.9vw, 2.14vw, 500)

		&__date
			font(OpenSans, 1.6vw, 2.2vw, 300)

	.feedback-form
		padding-top 7.14vw

		&__label-name
			width 23vw
			margin-right 3.57vw
			margin-bottom 4.2vw
			font(OpenSans, 2.2vw, 2.71vw, 300)

		&__input-name
			padding 0.71vw 1.57vw
			font(OpenSans, 2vw, 2.5vw, 300)
			placeholder(font-size, 2vw)
			placeholder(line-height, 2.5vw)

		&__label-subject
			width 23vw
			margin-bottom 4.2vw
			font(OpenSans, 2.2vw, 2.71vw, 300)

		&__input-subject
			padding 0.71vw 1.57vw
			font(OpenSans, 2vw, 2.5vw, 300)
			placeholder(font-size, 2vw)
			placeholder(line-height, 2.5vw)

		&__label-message
			margin-bottom 4.7vw
			font(OpenSans, 2.2vw, 2.71vw, 300)

		&__input-message
			size(100%, 10vw)
			font(OpenSans, 2vw, 2.5vw, 300)
			placeholder(font-size, 2vw)
			placeholder(line-height, 2.5vw)

		&__btn
			btn(1.7vw, 4vw, 2vw, 2.5vw)
			border-radius 2.29vw
			
	.social
		&__link
			size(5vw)
			margin 0 0.8vw