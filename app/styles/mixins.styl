clearfix()
	&:after
		display table
		clear both
		content ''
		
size($width, $height = $width)
	width $width
	height $height
	
font($name = OpenSans, $fsize = 16px, $lheight = $fsize, $fweight = 400)
	font-family $name, sans-serif
	font-size $fsize
	line-height $lheight
	font-weight $fweight
	
placeholder(prop, value)
	&::-webkit-input-placeholder
		{prop} value
	&::-moz-input-placeholder
		{prop} value
		
markertitle($margin = 30px, $width = 150px, $height = 4px)
	content ''
	position relative
	margin $margin auto 0
	display block
	size($width, $height)
	background-color accent